<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@bench) do |f| %>
        <div class="form-group">
          <%= f.number_field :bench_record, class: 'form-control' %>
        </div>
        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'benches/benches', benches: @benches %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Fitness</h1>
    </div>
  </div>
<% end %>